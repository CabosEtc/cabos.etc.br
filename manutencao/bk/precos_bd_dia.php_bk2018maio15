	$produto=$row[1]; 
	$preco=$row[2];
	$data=substr($row[3],11,8);
	$link=$row[4];
	$id_produto=$row[5];
	$flag_predio=$row[6];
	$cd_produto=$row[7];
	$flag_ativo=$row[8];
