$resultado2 = mysql_query($query2,$conexao);
if(mysql_num_rows($resultado2)>0){
$preco_cabos=mysql_result($resultado2,0,0);
}	else {$preco_cabos=0;}
	IF($flag_predio==0){
		$cor="#FFA500";}
	IF($flag_predio==1){
		$cor="#FF0000";}
