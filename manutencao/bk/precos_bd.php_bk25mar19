  var t=1200;
  

  function timedCount()
  {
    if(t>0)
    {
	  document.getElementById("txt").innerHTML = "Faltam: " + t + " segundos para refresh da pagina.";
      setTimeout("timedCount()", 1000);
	  t=t-1;
	 }	
	 
	 if(t==0)
	 {
	  location.href = "http://www.cabos.etc.br/manutencao/precos_bd.php";
	}
  }
</script>



